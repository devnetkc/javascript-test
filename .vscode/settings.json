{
  // hide directories and files for projet which developers will most likely never need access too or want to open/see
  "files.exclude": {
    "ns_npm_repository/**": true,
    "coverage/": true,
    "package-lock.json": true,
    "node_modules/**": true,
    ".github/**": true,
    "assets/css/**": true,
    "scss/**": false
  },
  "cSpell.words": [
    "bday",
    "bestcustomer",
    "birthdate",
    "Chastain",
    "dayssincesale",
    "daystobday",
    "Dwyer",
    "Eathon",
    "internalid",
    "lastsaledate",
    "saledate",
    "totalsales",
    "worstperforming"
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "es6-css-minify.minifyOnSave": "exists",
  "appService.zipIgnorePattern": ["node_modules{,/**}", ".vscode{,/**}"]
}
